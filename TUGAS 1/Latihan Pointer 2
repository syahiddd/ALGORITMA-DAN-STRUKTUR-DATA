#include <iostream>
using namespace std;

int opmtk(int *x,int y,int *z){
    *x = 0;
    *z = 1;
    
    for (int i = 1; i <= y; i++ ){
        *x += i * i;
        *z *= (2 * i -1 );
    }
    return 0;
}

int main() {
    int y ;
    int hslx;
    int hslz;
    
    cout << "Masukkan bilangan : ";
    cin >> y;
    
    opmtk(&hslx,y,&hslz);
    
    cout << "*x = " << hslx << endl;
    cout << "*z = " << hslz << endl;
    
    return 0;
}