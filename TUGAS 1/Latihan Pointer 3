#include <iostream>
using namespace std;

void blkarray(int *ptr, int uk){
    for (int i = 0; i < uk; i++){
        cout << *(ptr + i) << " ";
    }
    cout << endl;
}


int main() {
    int n;
    
    cout << "Masukkan ukuran array : " ;
    cin >> n;
    
    int arr[n];
    
    for (int i = 0; i < n; i++){
        cout << "Masukkan elemen ke- " << i+1 << " : " ;
        cin >> arr[i];
    }
    
    int *ptr = arr;
    
    for (int i = 0; i< n/2; i++ ){
        int temp = *(ptr + i);
        *(ptr + i) = *(ptr + n - 1 - i);
        *(ptr + n - 1 - i) = temp;
        }
    
    cout << endl << "Hasil setelah dibalik : ";
    blkarray(ptr,n);
    
    
    
    
    return 0;
    }