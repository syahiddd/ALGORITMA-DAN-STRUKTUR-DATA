#include <iostream>
using namespace std;

void jmlhgnjl (int bts,int *x) {
	*x = 0;
	for (int i = 1; i <= bts; i++) {
		if (i % 2 != 0) {
			*x += i; 
		}
	}
}



int main() {
	int y;
	int hasil;

	cout << "Masukkan bilangan : ";
	cin >> y;

    jmlhgnjl(y,&hasil);
    
    cout << "Jumlah bilangan ganjil dari 1 sampai " << y << " adalah " << hasil ;





	return 0;
}
